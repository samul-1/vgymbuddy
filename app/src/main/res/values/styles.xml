<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="CardTitle" parent="Base.CardView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:fontWeight">1000</item>
    </style>
    <style name="FragmentTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:fontWeight">1000</item>
    </style>
    <style name="FragmentSubtitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/design_default_color_secondary_variant</item>
        <item name="android:fontWeight">400</item>
    </style>
    <style name="CardContent" parent="Base.CardView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/material_on_background_emphasis_medium</item>
        <item name="android:fontWeight">1000</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>